<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <title>Display quiz</title>
    </head>
    <body>
        <div class="container p-3">
            <h1 class="mb-3"><%= quizz.title %></h1>
            <h3 class="mb-3"><%= quizz.description %></h3>
            <div class="mt-5">
                <h1 class="mb-3">Questions</h1>
                <div class="list-group">
                    <% quizz.questions.forEach((question) => { %>
                    <div
                        class="list-group-item d-flex justify-content-between align-items-start"
                    >
                        <div class="ms-2 me-auto p-1"><%= question.text %></div>
                    </div>
                    <% }); %>
                </div>
            </div>
            <a href="/quizz/quizzes" class="btn btn-primary mt-3"
                >Back to quizzes</a
            >
            <a
                href="/quizz/edit?id=<%= quizz._id %>"
                class="btn btn-warning mt-3"
                >Edit quiz</a
            >
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>