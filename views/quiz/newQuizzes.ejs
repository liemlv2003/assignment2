<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <title>Create new quiz</title>
    </head>
    <body>
        <div class="container p-3">
            <h1>Create New Quiz</h1>
            <form action="/api/quizzes" method="post">
                <div class="mb-3">
                    <label for="titleForm" class="form-label">Tittle:</label>
                    <input
                        type="text"
                        class="form-control"
                        id="titleForm"
                        autocomplete="off"
                    />
                </div>
                <div class="mb-3">
                    <label for="descriptionForm" class="form-label"
                        >Description:</label
                    >
                    <input
                        type="text"
                        class="form-control"
                        id="descriptionForm"
                        autocomplete="off"
                    />
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
        <script>
            const form = document.querySelector("form");
            form.addEventListener("submit", async (e) => {
                e.preventDefault();
                const title = document.querySelector("#titleForm").value;
                const description =
                    document.querySelector("#descriptionForm").value;
                const response = await fetch(
                    "http://localhost:3000/api/quizzes",
                    {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                        },
                        body: JSON.stringify({
                            title: title,
                            description: description,
                        }),
                    }
                );
                if (response.ok) {
                    alert("Quiz created successfully");
                    window.location.href = "/quizz/quizzes";
                } else {
                    alert("Failed to create quiz");
                }
            });
        </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>