<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <title>Edit question</title>
    </head>
    <body>
        <div class="container p-3">
            <h1>Edit Question</h1>
            <form action="/api/questions" method="put">
                <div class="mb-3">
                    <label for="questionTextForm" class="form-label">
                        Question Text:</label
                    >
                    <input
                        type="text"
                        class="form-control"
                        id="questionTextForm"
                        autocomplete="off"
                        value="<%= question.text %>"
                    />
                </div>
                <div class="mb-3">
                    <label for="optionsForm" class="form-label"
                        >Options (comma separated):</label
                    >
                    <input
                        type="text"
                        class="form-control"
                        id="optionsForm"
                        autocomplete="off"
                        value="<%= question.options.join(', ') %>"
                    />
                </div>
                <div class="mb-3">
                    <label for="keywordsForm" class="form-label"
                        >Keywords (comma separated):</label
                    >
                    <input
                        type="text"
                        class="form-control"
                        id="keywordsForm"
                        autocomplete="off"
                        value="<%= question.keywords.join(', ') %>"
                    />
                </div>
                <div class="mb-3">
                    <label for="correctAnswerIndexForm" class="form-label"
                        >Correct Answer Index:</label
                    >
                    <input
                        type="number"
                        class="form-control"
                        id="correctAnswerIndexForm"
                        autocomplete="off"
                        value="<%= question.correctAnswerIndex %>"
                    />
                </div>

                <button type="submit" class="btn btn-primary mt-3">
                    Edit question
                </button>
            </form>
        </div>
        <script>
            document
                .querySelector("form")
                .addEventListener("submit", async (e) => {
                    e.preventDefault();
                    const questionText =
                        document.querySelector("#questionTextForm").value;
                    const options = document
                        .querySelector("#optionsForm")
                        .value.split(",")
                        .map((option) => option.trim());
                    const keywords = document
                        .querySelector("#keywordsForm")
                        .value.split(",")
                        .map((keyword) => keyword.trim());
                    const correctAnswerIndex = document.querySelector(
                        "#correctAnswerIndexForm"
                    ).value;
                    const response = await fetch(
                        "http://localhost:3000/api/question/<%= question._id %>",
                        {
                            method: "PUT",
                            headers: {
                                "Content-Type": "application/json",
                            },
                            body: JSON.stringify({
                                text: questionText,
                                options: options,
                                keywords: keywords,
                                correctAnswerIndex: correctAnswerIndex,
                            }),
                        }
                    );
                    console.log("<%= question._id%>");
                    if (response.ok) {
                        alert("Question updated successfully");
                        window.location.href = "questions";
                    } else {
                        alert("Failed to update question");
                    }
                });
        </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>